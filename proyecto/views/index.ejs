<!DOCTYPE html>
<html lang="es">
<!-- Include Head --> 
<%- include('./partials/head') %>   
<body>
	<!-- Header -->	
	<% if (locals.user!=undefined) {%>

		<%- include('./partials/headerLougeado.ejs') %>
	
	<% } else{ %>
	
		<%- include('./partials/header.ejs')Â %>
		
	<%}%>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
<% for( let i = 0; i < productos.length; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/producto/product/<%=productos[i].id %>">
						<figure class="product-box_image">
							<img src="<%= productos[i].imagenDelProducto %>" alt="foto de producto">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombreDelProducto %></h2>
							 <p>Creado por:
                                    <a href="/usuario/profile/<%= productos[i].usuarios.id %>"><%= productos[i].usuarios.email %></a>
                            </p>

						</article>
					</a>
				</section>
			</div>
<% } %>	


		</div>
	</div>


	<!-- footer -->
<%- include('./partials/footer') %>  
	<!-- /footer -->
</body>	
</html>
