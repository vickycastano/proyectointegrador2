<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>  
<body>
	<!-- Header -->	
		<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= datos.productos[2].nombreDelProducto %> </h2> 
			<p class="product-detail-description">
				<a href="/productadd"> Editar </a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src=<%= datos.productos[0].imagen %> alt="fotodelproducto" class="product-detail-img">
					<p class="product-detail-description"> <%=datos.productos[0].descripcion%> </p>
				</article>

				<div class="col-12 col-lg-4">
					<section class="comments">
				<% for( let i = 0; i < datos.productos[0].comentarios.length; i++ ) { %>
						<article>
							<img src="<%= datos.productos[0].comentarios[i].imagenDePerfil %>" alt="foto del producto">
							<div class="data">
								<p class="user">
								<strong> <a href="/profile"> <%= datos.productos[0].comentarios[i].nombreDeUsuario %> </a> </strong>
								<%= datos.productos[0].comentarios[i].textoDelComentario %> </p>
							</div>
						</article>
				<% } %>
					</section>

					<form class="form" action="/" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
<%- include('./partials/footer') %>  
	<!-- /footer -->

</body>	
</html>