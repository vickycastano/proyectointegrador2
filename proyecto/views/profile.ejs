<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if (locals.user!=undefined) {%>

		<%- include('./partials/headerLougeado.ejs') %>
	
	<% } else{ %>
	
		<%- include('./partials/header.ejs')Â %>
		
	<%}%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src='/images/users/<%=usuario.fotoDePerfil%>' alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.email %>
						<a href="/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href=""> SEGUIR</a>
				</div>
				<div>
					<ul class="formli">
						<li><%= usuario.email %></li>
						<li> <%= productos.length %> productos </li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Mis productos </h2>
			</div>

	<% for( let i = 0; i < productos.length; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/producto/product/<%=productos[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= productos[i].imagenDelProducto %>" alt="foto de producto">
						</figure>
						<article class="product-box_data">
							<h2> <%= productos[i].nombreDelProducto %> </h2>
							<p> <%= productos[i].descripcion %> </p>
						</article>
					</a>
				</section>
			</div>
<% } %>

		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>