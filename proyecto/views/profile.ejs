<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if (locals.user!=undefined) {%>

		<%- include('./partials/headerLougeado.ejs') %>
	
	<% } else{ %>
	
		<%- include('./partials/header.ejs') %>
		
	<%}%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src='<%= datos.usuario.fotoDePerfil %>' alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= datos.usuario.usuario %>
						<a href="/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href=""> SEGUIR</a>
				</div>
				<div>
					<ul class="formli">
						<li><%= datos.usuario.email %></li>
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Mis productos </h2>
			</div>

<% for( let i = 0; i < datos.productos.length; i++ ) { %>
			<!-- Show mis productos -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/producto/product">
						<figure class="product-box_image">
							<img src="<%= datos.productos[i].imagen %>" alt="foto de producto">
						</figure>
						<article class="product-box_data">
							<h2><%= datos.productos[i].nombreDelProducto %></h2>
							<p><%= datos.productos[i].descripción %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
<% } %>

		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>